        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_with(model: @municipe) do |f| %>
<div class="container-xl">
  <div class="row">

    <div class="mb-3">
      <h5> <%= f.label :nome, { class: "form-label"} %></h5>
      <%= f.text_field :nome, { class: "form-control", placeholder: "Nome" } %>
    </div>

    <div class="mb-3">
      <h5> <%= f.label :cpf, { class: "form-label"} %> </h5>
      <%= f.text_field :cpf, { class: "form-control", placeholder: "CPF" } %>
    </div>

    <div class="mb-3">
      <h5> <%= f.label :cns, { class: "form-label"} %> </h5>
      <%= f.text_field :cns, { class: "form-control", placeholder: "CNS" } %>
    </div>

    <div class="mb-3">
      <h5> <%= f.label :email, { class: "form-label"} %></h5>
      <%= f.text_field :email, { class: "form-control", placeholder: "E-mail" } %>
    </div>

    <div class="mb-3">
      <h5> <%= form.label :nascimento, 'Data de nascimento', style: "display: block" %> </h5>
      <%= form.date_field :nascimento, class: "form-control" %>
    </div>

    <div class="mb-3">
      <h5> <%= f.label :telefone, { class: "form-label"} %>
      <%= f.text_field :telefone, { class: "form-control", placeholder: "Telefone" } %> </h5>
    </div>

    <div class="mb-3">
      <h5><%= f.label :foto, { class: "form-label"} %> </h5>
      <%= f.file_field :image_url, { class: "form-control", placeholder: "Foto" } %>
    </div>

    <div class="field">
      <h5><%= form.label :status %></h5>
      <%= form.check_box :status %>
    </div>

    <br><br><br>
    <hr>

    <div class="actions">
      <%= form.submit :Cadastrar %>
    </div>

    <br>
  </div>
</div>
<% end %>
<% end %>
